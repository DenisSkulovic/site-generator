{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true,
    "types": [
      "webpack-env",
      "node"
    ],
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "../../page_cls_module",
      // add 'prepend' if you want to include the referenced project in your output file
      "prepend": false
    }
  ]
}
