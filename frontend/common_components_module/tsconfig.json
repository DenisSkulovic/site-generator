{
  "compilerOptions": {
    "target": "es2019",
    "experimentalDecorators": true,
    "module": "es2020",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@page_cls_module": [
        "../page_cls_module"
      ]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "vue-shim.d.ts"
  ]
}