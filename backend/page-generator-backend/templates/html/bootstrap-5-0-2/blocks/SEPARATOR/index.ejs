<%- include(`../../../block_info.ejs`, {config}) %>

<% if (content.data.direction === 'horizontal') { %>
    <hr data-block-uuid="<%-config.uuid%>" class="w-100"/>
<% } else if (content.data.direction === 'vertical') { %>
    <div data-block-uuid="<%-config.uuid%>" style="border-left: <%- content.data.size %>px solid <%- content.data.color %>; height: 100vh;"></div>
<% } else { %>
    <p>Invalid direction: <%= content.data.direction %>. Please enter either "horizontal" or "vertical".</p>
<% } %>